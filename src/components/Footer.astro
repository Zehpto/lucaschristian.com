---
const currentYear = new Date().getFullYear();

const socials = [
  { name: 'GitHub', url: 'https://github.com/Zehpto', icon: 'github' },
  { name: 'Twitter', url: 'https://twitter.com/Zehpto', icon: 'twitter' },
  { name: 'LinkedIn', url: 'https://linkedin.com/in/lucaschristian', icon: 'linkedin' },
  { name: 'Email', url: 'mailto:lucas@lucaschristian.com', icon: 'email' },
];
---

<footer class="mt-auto border-t border-gray-800/50 bg-gray-950/50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
      <!-- Left: Branding -->
      <div class="flex flex-col items-center md:items-start">
        <p class="text-gray-400 font-mono text-sm">Lucas Christian</p>
        <p class="text-gray-600 text-xs mt-1">i break things</p>
      </div>

      <!-- Center: Social Links -->
      <div class="flex space-x-6">
        {socials.map(({ name, url, icon }) => (
          <a
            href={url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-500 hover:text-emerald-400 transition-colors"
            aria-label={name}
          >
            <span class="text-sm font-mono">{icon}</span>
          </a>
        ))}
      </div>

      <!-- Right: Copyright -->
      <div class="text-gray-600 text-xs">
        © {currentYear} · Built with <a href="https://astro.build" class="text-gray-500 hover:text-emerald-400 transition-colors">Astro</a>
      </div>
    </div>
  </div>
</footer>
